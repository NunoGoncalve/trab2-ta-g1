<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="Background" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.catcoins.RecoverPassword">

    <VBox alignment="CENTER" maxHeight="620.0" maxWidth="481.0" prefHeight="505.0" prefWidth="400.0" spacing="15" styleClass="form-container">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <!-- Título -->
        <Label alignment="CENTER" prefHeight="50.0" prefWidth="195.0" styleClass="label-title" text="Recuperação" textAlignment="CENTER">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin></Label>

        <!-- Email -->
        <TextField fx:id="emailField" promptText="Email" editable="false" focusTraversable="false" style="-fx-border-radius: 15px;" styleClass="text-field" />
        <TextField fx:id="codigoField" prefHeight="80.0" prefWidth="300.0" promptText="Código Verificação" style="-fx-border-radius: 15px;" styleClass="text-field" />

        <!-- Botão de login -->
        <Button fx:id="ConfirmCode" styleClass="button-login" onAction="#VerifyCode" text="Confirmar" />
        <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        <!-- Botão de voltar ao login -->
        <Button alignment="TOP_LEFT" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#GoPassSendEmail" rotate="270.0" styleClass="return-button" text="⤴">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin></Button>
    </VBox>
</StackPane>
