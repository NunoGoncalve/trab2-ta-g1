<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="MainPanel" prefHeight="800.0" prefWidth="800.0" styleClass="root" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.catcoins.UserConfigController">

    <center>
        <VBox maxHeight="487.0" maxWidth="400.0" prefHeight="487.0" prefWidth="400.0" spacing="15" styleClass="main-container">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="40.0" left="70.0" right="70.0" top="40.0" />
         </BorderPane.margin>
         <children>
            <Label prefHeight="43.0" prefWidth="101.0" styleClass="welcome-text" text="My Account">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label styleClass="text" text="Username" />
            <HBox alignment="CENTER" maxWidth="380.0" prefHeight="45.0" prefWidth="356.0" styleClass="user-field">
               <children>
                  <TextField fx:id="Name" editable="false" maxWidth="300.0" minWidth="245.0" prefHeight="35.0" prefWidth="252.0" styleClass="user-field" />
                  <Button fx:id="EditButton" mnemonicParsing="false" onAction="#EditButtonOnAction" prefHeight="35.0" prefWidth="60.0" styleClass="user-button" text="Edit">
                     <HBox.margin>
                        <Insets bottom="5.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label styleClass="text" text="Email address" />
            <TextField fx:id="Email" editable="false" maxWidth="380.0" prefHeight="35.0" prefWidth="380.0" styleClass="user-field" />
            <Label styleClass="user-label" text="User@gmail.com" />

             <Label styleClass="text" text="Currency Preview" />
             <ComboBox fx:id="currencyComboBox" onAction="#onCurrencyChanged" prefHeight="34.0" prefWidth="90.0" value="USD $">
                 <items>
                     <FXCollections fx:factory="observableArrayList">
                         <String fx:value="USD $" />
                         <String fx:value="EUR â‚¬" />
                     </FXCollections>
                 </items>
             </ComboBox>
            <Separator prefWidth="400.0" />
         </children>
        </VBox>
    </center>
</BorderPane>
