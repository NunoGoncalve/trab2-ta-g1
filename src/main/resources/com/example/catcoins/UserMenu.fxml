                                <Insets bottom="30.0" />
                            </VBox.margin>
                        </Button>
                        <Button onAction="#ManageCoin" prefHeight="29.0" prefWidth="132.0" styleClass="sidebar-button" text="Gerir moedas" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="30.0" />
                            </VBox.margin>
                        </Button>
                        <Separator prefHeight="0.0" prefWidth="86.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                        </Separator>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</StackPane>
